<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Kunde List</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-page="create" class="btn btn-primary">
				<i class="bi bi-plus-square"></i> &nbsp;Create New Kunde
			</a>
		</div>
	</div>

	<br/><br/>

	<table class="table table-bordered table-striped" style="width: 100%">
		<thead>
		<tr>
			<th>
				Navn
			</th>
			<th>
				Email
			</th>
			<th>
				Telefon
			</th>
			<th>
				Adresse
			</th>
			<th>
				Actions
			</th>

			<th></th>
		</tr>
		</thead>
		<tbody>
		@foreach (var obj in Model.IndexViewModel)
		{
			<tr>
			<td width="50%">@obj.Name</td>
			<td width="30%">@obj.Email</td>
			<td width="50%">@obj.Telefon</td>
			<td width="30%">@obj.Adresse</td>
			<td>
				<div class="w-75 btn-group" role="group">
					<a asp-page="Edit" asp-route-id="@obj.Kid" class="btn btn-primary mx-2">
						<i class="bi bi-pencil-square">View</i>
					</a>
					<a asp-page="Delete" asp-route-id="@obj.Kid" class="btn btn-danger mx-2">
						<i class="bi bi-trash-fill">Edit</i>
					</a>
				</div>
			</td>
			</tr>
		}

		</tbody>
	</table>

</div>