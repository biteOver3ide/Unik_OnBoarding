@page
@model Unik_OnBoarding.WebApp.Pages.Opgaver.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h3 class="text-primary">Opgaver List</h3>
		</div>
		<div class="col-6 text-end">
			<a asp-page="Create" class="btn btn-warning">
				<i class="bi bi-plus-square"></i> &nbsp;Create Opgaver
			</a>
		</div>
	</div>

	<br/><br/>

	<table class="table table-hover">
		<thead>
		<tr>
			<th scope="col">Navn</th>
			<th scope="col">Beskivelse</th>
			<th></th>
		</tr>
		</thead>
		<tbody>
		@foreach (var obj in Model.IndexViewModel)
		{
			<tr class="table-primary">
				<td>@obj.OpgaveName</td>
				<td>@obj.Beskrivelse</td>
				<td>
					<div class="w-75 btn-group" role="group">
						<a asp-page="Edit" asp-route-id="@obj.OpgaveId" class="btn btn-primary mx-2">
							<i class="bi bi-trash-fill">Edit</i>
						</a>
						<a asp-page="Delete" asp-route-id="@obj.OpgaveId" class="btn btn-danger mx-2">
							<i class="bi bi-pencil-square">Delete</i>
						</a>
					</div>
				</td>
			</tr>
		}
		</tbody>
	</table>

</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}