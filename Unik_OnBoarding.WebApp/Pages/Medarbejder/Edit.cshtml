}

<h2>Edit Medarbejder</h2>
<hr/>
<div class="row">
	<div class="col-md-4">
		<form method="post">
			<input type="hidden" asp-for="Urt.RowVersion" class="form-control" />
			<input type="hidden" asp-for="Urt.MedarbejderId" class="form-control" />
			<div class="form-group">
				<label asp-for="Urt.Fornavn" class="control-label"></label>
				<input asp-for="Urt.Fornavn" class="form-control" />
				<span asp-validation-for="Urt.Fornavn" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Urt.Efternavn" class="control-label"></label>
				<input asp-for="Urt.Efternavn" class="form-control" />
				<span asp-validation-for="Urt.Efternavn" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Urt.Email" class="control-label"></label>
				<input asp-for="Urt.Email" class="form-control" />
				<span asp-validation-for="Urt.Email" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Urt.Telefon" class="control-label"></label>
				<input asp-for="Urt.Telefon" class="form-control" />
				<span asp-validation-for="Urt.Telefon" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Urt.Job" class="control-label"></label>
				<select asp-for="Urt.Job"
				        class="form-control" 
				        asp-items="Html.GetEnumSelectList<Jobtitler>()">
					<option>Select type ...</option>
				</select>
				<span asp-validation-for="Urt.Job" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Update Medarbejder" class="btn btn-primary form-control"/>
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-page="Index">Back to List</a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}