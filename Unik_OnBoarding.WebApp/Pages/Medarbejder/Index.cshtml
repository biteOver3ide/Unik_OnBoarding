@page
@model IndexModel
@{
}
<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Medarbejder List</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-page="Edit" class="btn btn-primary">
				<i class="bi bi-plus-square"></i> &nbsp;Edit Medarbejder
			</a>
		</div>
	</div>

	<br/><br/>

	<table class="table table-bordered table-striped" style="width: 100%">
		<thead>
		<tr>
			<th>MedarbejderId</th>
			<th>Fornavn</th>
			<th>Efternavn</th>
			<th>Email</th>
			<th>Telefon</th>
			<th>Job</th>
			<th></th>
		</tr>
		</thead>
		<tbody>
		@foreach (var obj in Model.IndexViewModel)
		{
			<tr>
				<td width="50%">@obj.MedarbejderId</td>
				<td width="50%">@obj.Fornavn</td>
				<td width="30%">@obj.Efternavn</td>
				<td width="30%">@obj.Email</td>
				<td width="30%">@obj.Telefon</td>
				<td width="30%">@obj.Job</td>
				<td>
					<div class="w-75 btn-group" role="group">
						<a asp-page="Details" asp-route-id="@obj.MedarbejderId" class="btn btn-primary mx-2">
							<i class="bi bi-pencil-square">View</i>
						</a>
						<a asp-page="Edit" asp-route-id="@obj.MedarbejderId" class="btn btn-danger mx-2">
							<i class="bi bi-trash-fill">Edit</i>
						</a>
					</div>
				</td>
			</tr>
		}

		</tbody>
	</table>

</div>