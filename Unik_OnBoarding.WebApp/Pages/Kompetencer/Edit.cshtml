@page
@using Unik_OnBoarding.Domain.Model
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model EditModel

@{
	ViewData["Title"] = "Edit";
}

<h3>Edit Kompetencer</h3>
<hr/>
<div class="row">
	<div class="col-md-4">
		<form method="post">
			<input type="hidden" asp-for="Urt.RowVersion" class="form-control"/>
			<input type="hidden" asp-for="Urt.KompetenceId" class="form-control"/>
			<div class="form-group">
				<label asp-for="Urt.Job" class="control-label"></label>
				<select asp-for="Urt.Job"
				        class="form-control"
				        asp-items="Html.GetEnumSelectList<Jobtitler>()">
					<option>Select type ...</option>
				</select>
				<span asp-validation-for="Urt.Job" class="text-danger"></span>
			</div>
			<br/>
			<div class="form-group">
				<label asp-for="Urt.Beskrivelse" class="control-label"></label>
				<input asp-for="Urt.Beskrivelse" class="form-control"/>
				<span asp-validation-for="Urt.Beskrivelse" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Update Kompetencer" class="btn btn-primary form-control"/>
			</div>

		</form>
	</div>
</div>
<br/>
<div>
	<a asp-page="Index">Back to List</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}