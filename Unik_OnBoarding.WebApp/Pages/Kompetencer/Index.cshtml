@page
@model Unik_OnBoarding.WebApp.Pages.Kompetencer.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Kompetencer List</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-page="Create" class="btn btn-primary">
				<i class="bi bi-plus-square"></i> &nbsp;Create Kompetencer
			</a>
		</div>
	</div>

	<br /><br />

	<table class="table table-bordered table-striped" style="width: 100%">
		<thead>
			<tr>
				<th>Job</th>
				<th>Beskrivelse</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var obj in Model.KompetenceDto)
			{
				<tr>
					<td width="50%">@obj.Job</td>
					<td width="50%">@obj.Beskrivelse</td>
					<td>
						<div class="w-75 btn-group" role="group">
							<a asp-page="Delete" asp-route-id="@obj.KompetenceId" class="btn btn-primary mx-2">
								<i class="bi bi-pencil-square">Delete</i>
							</a>
							<a asp-page="Edit" asp-route-id="@obj.KompetenceId" class="btn btn-danger mx-2">
								<i class="bi bi-trash-fill">Edit</i>
							</a>
						</div>
					</td>
				</tr>
			}

		</tbody>
	</table>

</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
	}