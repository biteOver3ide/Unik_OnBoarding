@page
@model IndexModel
@{
}
<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h3 class="text-primary">Kunde List</h3>
		</div>
		<div class="col-6 text-end">
			<a asp-page="Create" class="btn btn-warning">
				<i class="bi bi-plus-square"></i> &nbsp;Create Kunde
			</a>
		</div>
	</div>

	<br/><br/>

	<table class="table table-hover">
		<thead>
		<tr>
			<th scope="col">Fornavn</th>
			<th scope="col">Efternavn</th>
			<th scope="col">Firmanavn</th>
			<th scope="col">CVR</th>
			<th scope="col">Email</th>
			<th scope="col">Telefon</th>
			<th scope="col">Adresse</th>
			<th></th>
		</tr>
		</thead>
		<tbody>
		@foreach (var obj in Model.IndexViewModel)
		{
			<tr class="table-primary">
				<td>@obj.Fornavn</td>
				<td>@obj.Efternavn</td>
				<td>@obj.Firmanavn</td>
				<td>@obj.Cvr</td>
				<td>@obj.Email</td>
				<td>@obj.Telefon</td>
				<td>@obj.Adresse</td>
				<td>
					<div class="w-75 btn-group" role="group">
						<a asp-page="Edit" asp-route-id="@obj.Kid" class="btn btn-primary mx-2">
							<i class="bi bi-trash-fill">Edit</i>
						</a>
						<a asp-page="Delete" asp-route-id="@obj.Kid" class="btn btn-danger mx-2">
							<i class="bi bi-pencil-square">Delete</i>
						</a>
					</div>
				</td>
			</tr>
		}
		</tbody>
	</table>

</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}